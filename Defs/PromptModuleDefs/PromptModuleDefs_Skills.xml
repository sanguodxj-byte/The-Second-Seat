<!--
    PromptModuleDefs_Skills.xml
    
    技能 Prompt 模块定义
    这些模块根据用户输入动态加载
    通过 expandedKeywords 实现意图识别
    
    示例模块：农业、战斗、建造、狩猎等
-->
<Defs>
    
    <!-- ========== 农业模块 ========== -->
    
    <TheSecondSeat.SmartPrompt.PromptModuleDef>
        <defName>Module_Agriculture</defName>
        <label>农业技能</label>
        <description>农业相关的知识和指令</description>
        
        <moduleType>Skill</moduleType>
        <priority>500</priority>
        <alwaysActive>false</alwaysActive>
        
        <!-- 触发意图 -->
        <triggerIntents>
            <li>Harvest</li>
            <li>Farm</li>
            <li>Plant</li>
        </triggerIntents>
        
        <!-- 依赖模块 -->
        <dependencies>
            <li>Module_Command_Format</li>
        </dependencies>
        
        <!-- AI 预生成的扩展关键词（中英文混合） -->
        <expandedKeywords>
            <!-- 英文关键词 -->
            <li>harvest</li>
            <li>reap</li>
            <li>crop</li>
